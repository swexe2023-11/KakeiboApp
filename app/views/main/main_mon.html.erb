<!DOCTYPE html>
<html lang='ja'>
<head>
  <meta charset="utf-8">
  <link href="main.css" rel="stylesheet">
</head>

<div class= "calendar">
    <table>
      <tr>
        <% t('date.abbr_day_names').each do |day_name| %>
          <td>
            <%= day_name %>
          </td>
        <% end %>
      </tr>
      <% @calendar_data.each do |date| %>
        <% if date.wday == 0 %>
          <tr>
        <% end %>
        <td>
          <%= date.day %>
        </td>
        <% if date.wday == 6 %>
        </tr>
        <% end %>
      <% end %>
    </table>
  
    </div>
</div>



